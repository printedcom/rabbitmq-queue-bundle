{
  "name": "printed/rabbitmq-queue-bundle",
  "description": "A helper wrapper for RabbitMQ producers and consumers",
  "type": "library",
  "keywords": ["queue", "rabbitmq", "symfony", "bundle"],
  "homepage": "https://printed.com",
  "license": "GNU",

  "authors": [
    {
      "name": "Printed Developers",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Printed\\Bundle\\Queue\\": "src/Printed/Bundle/Queue"
    }
  },

  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/printedcom/RabbitMqBundle.git"
    }
  ],

  "require": {
    "php": ">=7.0",

    "symfony/config": "~3.0",
    "symfony/console": "~3.0",
    "symfony/dependency-injection": "~3.0",
    "symfony/filesystem": "~3.0",
    "symfony/http-foundation": "~3.0",
    "symfony/http-kernel": "~3.0",
    "symfony/validator": "~3.0",

    "doctrine/cache": "^1.6",
    "doctrine/doctrine-bundle": "~1.4",
    "doctrine/orm": "~2.5",

    "monolog/monolog": "~1.11",

    "php-amqplib/rabbitmq-bundle": "dev-hotfixes",

    "ramsey/uuid": "~3.4",
    "php-http/guzzle6-adapter": "^1.1",
    "richardfullmer/rabbitmq-management-api": "^2.0"
  }

}
